        {
          "name": "POST Criar Pedido (Salva 'pedidoId')",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Usa dados do data.sql (Cliente 1, Restaurante 2, Produtos 4 e 6)",
                  "// Testa 201 Created",
                  "pm.test(\"Status code is 201 Created\", () => { pm.response.to.have.status(201); });",
                  "",
                  "// Valida o wrapper",
                  "pm.test(\"Resposta é 'success: true' e valida o valor total\", () => {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    // Valida o cálculo: (1 * 18.90) + (2 * 12.90) + 3.50 (taxa) = 48.20",
                  "    pm.expect(jsonData.data.valorTotal).to.eql(48.20);",
                  "});",
                  "",
                  "// Salva o ID do pedido",
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.id) {",
                  "    pm.environment.set(\"pedidoId\", jsonData.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
