          "name": "POST Cadastrar Cliente (Salva 'clienteId')",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Cenário 4.2: Testa Status 201",
                  "pm.test(\"Status code is 201 Created\", () => { pm.response.to.have.status(201); });",
                  "",
                  "// Cenário 4.2: Valida o wrapper ApiResponse",
                  "pm.test(\"Resposta é 'success: true' e contém 'data'\", () => {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    pm.expect(jsonData).to.have.property('data');",
                  "    pm.expect(jsonData).to.not.have.property('error');",
                  "    pm.expect(jsonData.data.nome).to.eql(\"Cliente Teste Postman\");",
                  "});",
                  "",
                  "// Cenário 4.3: Salva o ID em Variáveis de Ambiente",
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.id) {",
                  "    pm.environment.set(\"clienteId\", jsonData.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\r\n    \"nome\": \"Cliente Teste Postman\",\r\n    \"email\": \"postman.teste@email.com\",\r\n    \"telefone\": \"11999999999\",\r\n    \"endereco\": \"Rua Postman, 123\"\r\n}",
              "options": {
