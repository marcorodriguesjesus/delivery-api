            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\r\n    \"clienteId\": 1,\r\n    \"restauranteId\": 2,\r\n    \"itens\": [\r\n        {\"produtoId\": 4, \"quantidade\": 1},\r\n        {\"produtoId\": 6, \"quantidade\": 2}\r\n    ],\r\n    \"observacoes\": \"Criado pelo Postman\"\r\n}",
